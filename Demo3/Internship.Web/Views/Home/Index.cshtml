                <!-- End Row -->
            </div>
        </div>
        <!-- End Card -->
    </div>
    <div class="col-sm-6 col-lg-3 mb-3 mb-lg-6">
        <!-- Card -->
        <div class="card card-sm">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <!-- Media -->
                        <div class="media">
                            <i class="tio-briefcase-outlined nav-icon"></i>

                            <div class="media-body">
                                <a href="javascript:;" id="department-now" class="mb-1 h5">Departments</a>
                            </div>
                        </div>
                        <!-- End Media -->
                    </div>

                    <div class="col-auto">
                        <span id="departments-count" class="badge badge-soft-secondary px-2 py-1">@ViewData["departments.count"]</span>
                    </div>
                </div>
                <!-- End Row -->
            </div>
        </div>
        <!-- End Card -->
    </div>
    <div class="col-sm-6 col-lg-3 mb-3 mb-lg-6">
        <!-- Card -->
        <div class="card card-sm">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <!-- Media -->
                        <div class="media">
                            <i class="tio-poi-outlined nav-icon"></i>

                            <div class="media-body">
                                <a href="javascript:;" id="point-now" class="mb-1 h5">Points</a>
                            </div>
                        </div>
                        <!-- End Media -->
                    </div>

                    <div class="col-auto">
                        <span id="points-count" class="badge badge-soft-secondary px-2 py-1">@ViewData["points.count"]</span>
                    </div>
                </div>
                <!-- End Row -->
            </div>
        </div>
        <!-- End Card -->
    </div>
</div>
<!-- End Stats -->
<!-- Card -->
<div class="card mb-3 mb-lg-5">
    <!-- Header -->
    <div class="card-header">
        <div class="row justify-content-between align-items-center flex-grow-1">
            <div class="col-12 col-sm ">
                <!-- Search -->
                <div class="input-group input-group-merge input-group-borderless">
                    <div class="input-group-prepend">
                        <div class="pl-0 input-group-text">
                            <i class="tio-search"></i>
                        </div>
                    </div>
                    <input id="datatableSearch" type="search" class="form-control pl-5" placeholder="Type and press Enter to search" aria-label="Search users">
                </div>
                <!-- End Search -->
            </div>

            <div class="col-sm-auto">
                <div class="d-flex align-items-center">
                    <span class="text-secondary mx-2">Search on:</span>
                    <!-- Select -->
                    <select class="js-select2-custom js-datatable-search custom-select-sm mr-2" size="1" style="opacity: 0;"
                            data-hs-select2-options='{
                                "minimumResultsForSearch": "Infinity",
                                "customClass": "custom-select custom-select-sm custom-select-borderless",
                                "dropdownAutoWidth": true,
                                "width": true
                              }'>
                        <option value="0">None</option>
                        <option value="1">Index</option>
                        <option value="2">Email</option>
                        <option value="3">Name</option>
                        <option value="4">Phone</option>
                        <option value="5">Position</option>
                        <option value="6">Organization</option>
                        <option value="7">Training</option>
                        <option value="8">Mentor</option>
                    </select>
                    <!-- End Select -->

                    <span class="text-secondary mx-2">Sort by:</span>
                    <!-- Select -->
                    <select class="js-select2-custom js-datatable-sort custom-select-sm" size="1" style="opacity: 0;"
                            data-hs-select2-options='{
                                "minimumResultsForSearch": "Infinity",
                                "customClass": "custom-select custom-select-sm custom-select-borderless",
                                "dropdownAutoWidth": true,
                                "width": true
                              }'>
                        <option value="1">Index</option>
                        <option value="2">Email</option>
                        <option value="3">Name</option>
                        <option value="4">Phone</option>
                        <option value="5">Position</option>
                        <option value="6">Organization</option>
                        <option value="7">Training</option>
                        <option value="8">Mentor</option>
                    </select>
                    <!-- End Select -->
                    <!-- Unfold -->
                    <div class="ml-4 hs-unfold">
                        <a class="js-hs-unfold-invoker btn btn-sm btn-white" href="javascript:;"
                           data-hs-unfold-options='{
                         "target": "#usersFilterDropdown",
                         "type": "css-animation",
                         "smartPositionOff": true
                       }'>
                            <i class="tio-filter-list mr-1"></i> Filter
                        </a>

                        <div id="usersFilterDropdown" class="hs-unfold-content dropdown-unfold dropdown-menu dropdown-menu-sm-right dropdown-card card-dropdown-filter-centered" style="min-width: 25rem;">
                            <!-- Card -->
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-header-title">Advanced filters</h5>

                                    <!-- Toggle Button -->
                                    <a class="js-hs-unfold-invoker btn btn-icon btn-xs btn-ghost-secondary ml-2" href="javascript:;"
                                       data-hs-unfold-options='{
                              "target": "#usersFilterDropdown",
                              "type": "css-animation",
                              "smartPositionOff": true
                             }'>
                                        <i class="tio-clear tio-lg"></i>
                                    </a>
                                    <!-- End Toggle Button -->
                                </div>

                                <div class="card-body">
                                    <form>
                                        <div class="form-row">
                                            <div class="col-sm form-group">
                                                <small class="text-cap mb-2">Due Date</small>
                                                <!-- Flatpickr -->
                                                <input id="start-date" type="text" required class="js-flatpickr form-control flatpickr-custom" placeholder="Select dates"
                                                       data-hs-flatpickr-options='{
                                                       "dateFormat": "Y-m-d"
                                                       }'>
                                                <!-- End Flatpickr -->
                                            </div>

                                            <div class="col-sm-4 form-group">
                                                <small class="text-cap mb-4"></small>

                                                <!-- Select2 -->
                                                <select id="due-date-mode" class="js-select2-custom custom-select" size="1" style="opacity: 0;"
                                                        data-hs-select2-options='{
                                                        "minimumResultsForSearch": "Infinity",
                                                        "dropdownAutoWidth": true,
                                                        "placeholder": "Mode"
                                                        }'>
                                                    <option label="empty"></option>
                                                    <option value="1">Greater</option>
                                                    <option value="2">Equal</option>
                                                    <option value="3">Smaller</option>
                                                    <option value="4">Include</option>
                                                    <option value="5">Exclude</option>
                                                </select>
                                                <!-- End Select2 -->
                                            </div>

                                            <div class="col-sm form-group">
                                                <small class="text-cap mb-4"></small>
                                                <!-- Flatpickr -->
                                                <input id="end-date" type="text" class="js-flatpickr form-control flatpickr-custom" placeholder="Select dates"
                                                       data-hs-flatpickr-options='{
                                                       "dateFormat": "Y-m-d"
                                                       }'>
                                                <!-- End Flatpickr -->
                                            </div>

                                            <div class="col-12 form-group">
                                                <small class="text-cap mb-2">Passed</small>

                                                <!-- Select2 -->
                                                <select id="pass-filter" class="js-select2-custom custom-select" size="1" style="opacity: 0;"
                                                        data-hs-select2-options='{
                                                        "minimumResultsForSearch": "Infinity",
                                                        "placeholder": "Select one"
                                                        }'>
                                                    <option label="empty"></option>
                                                    <option value="1">Pass</option>
                                                    <option value="0">Fail</option>
                                                </select>
                                                <!-- End Select2 -->
                                            </div>
                                        </div>
                                        <!-- End Row -->

                                        <a id="ad-filter-submit" class="btn btn-block btn-primary" href="javascript:;">Apply</a>
                                    </form>
                                </div>

                            </div>
                            <!-- End Card -->
                        </div>
                    </div>
                    <!-- End Unfold -->

                </div>
            </div>
        </div>
    </div>
    <!-- End Header -->
    <!-- Table -->
    <div class="table-responsive datatable-custom datatable-custom-collapsible">
        <table id="datatable" class="table table-hover table-borderless table-thead-bordered table-nowrap table-align-middle card-table"
               data-hs-datatables-options='{
                     "columnDefs": [{
                        "targets": [0],
                        "orderable": false
                      }],
                     "order": []
               }'>
            <thead class="thead-light">
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Duration</th>
                    <th>Position</th>
                    <th>Organization</th>
                    <th>Mentor</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (DataRow X in Model.Interns.Tables[0].Rows)
                {
                    <tr data-id="@X["InternId"]">
                        <td class="details-control"></td>
                        <td class="table-column-pl-0">
                            <div class="d-flex align-items-center">
                                <div class="avatar avatar-sm avatar-circle" data-toggle="tooltip" data-placement="top" title="@X["InternId"]: @X["CreatedDate"]">
                                    <img class="avatar-img" src="@X["Avatar"]" alt="Image Description">
                                </div>
                                <div class="ml-3">
                                    <span class="d-block h5 text-hover-primary mb-0">@X["FullName"]</span>
                                    <span class="d-block font-size-sm text-body">@X["Email"]</span>
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="badge badge-soft-info">
                                <span class="bg-info"></span>@X["Phone"]
                            </span>
                        </td>
                        <td>
                            <span>@X["Duration"]</span>
                        </td>
                        <td>
                            <span class="d-block h5 mb-0">@X["DepName"]</span>
                            <span class="d-block font-size-sm">@X["Type"]</span>
                        </td>
                        <td>
                            <span>@X["OrgName"]</span>
                        </td>
                        <td>
                            <div class="ml-3">
                                <span class="d-block text-hover-primary mb-0">@X["Mentor"] <i class="tio-verified text-primary" data-toggle="tooltip" data-placement="bottom" title="@X["Email"]"></i></span>
                            </div>
                        </td>
                        <td>
                            <div class="hs-unfold">
                                <div class="js-hs-unfold-invoker btn btn-sm btn-ghost-secondary"
                                     data-hs-unfold-options='{
                                    "target": "#intern-@X["InternId"]",
                                    "type": "css-animation",
                                    "event": "hover",
                                    "duration": 100,
                                    "smartPositionOffEl": "#datatable"
                                   }'>
                                    More <i class="tio-chevron-down ml-1"></i>
                                </div>

                                <div id="intern-@X["InternId"]" class="hs-unfold-content dropdown-unfold dropdown-menu dropdown-menu-sm dropdown-menu-right">
                                    <a class="dropdown-item" href="javascript:;" onclick="InternUpdate(@X["InternId"])">Update info</a>
                                    <a class="dropdown-item" href="javascript:;" onclick="InternEvaluate(@X["InternId"])">Evaluate</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item text-danger" href="javascript:;" onclick="InternLeave(@X["InternId"],this)">Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- End Table -->
    <!-- Footer -->
    <div class="card-footer">
        <!-- Pagination -->
        <div class="row justify-content-center justify-content-sm-between align-items-sm-center">
            <div class="col-sm mb-2 mb-sm-0">
                <div class="d-flex justify-content-center justify-content-sm-start align-items-center">
                    <span class="mr-2">Showing:</span>

                    <!-- Select -->
                    <select id="datatableEntries" class="js-select2-custom"
                            data-hs-select2-options='{
                            "minimumResultsForSearch": "Infinity",
                            "customClass": "custom-select custom-select-sm custom-select-borderless",
                            "dropdownAutoWidth": true,
                            "width": true
                          }'>
                        <option value="6">6</option>
                        <option value="8">8</option>
                        <option value="12">12</option>
                        <option value="16">16</option>
                    </select>
                    <!-- End Select -->

                    <span class="text-secondary mr-2">of</span>

                    <!-- Pagination Quantity -->
                    <span id="datatableWithPaginationInfoTotalQty">@Model.Interns.Tables[1].Rows[0]["ShowLeadsTotalRows"]</span>
                </div>
            </div>

            <div class="col-sm-auto">
                <div class="d-flex justify-content-center justify-content-sm-end">
                    <!-- Pagination -->
                    <nav id="datatablePagination">
                        <div class="dataTables_paginate paging_simple_numbers" id="datatable_paginate">
                            <ul id="datatable_pagination" class="pagination datatable-custom-pagination">
                                <li class="paginate_item page-item">
                                    <a href="/?size=@Model.Pager.PageSize&page=@Model.Pager.StartPage&sort=@Model.Pager.Sort"
                                       class="paginate_button page-link">
                                        <span aria-hidden="true">Start</span>
                                    </a>
                                </li>

                                @foreach (var i in Model.Pager.Pages)
                                {
                                    <li class="paginate_item page-item @Model.CheckPageActive(i)">
                                        <a href="/?size=@Model.Pager.PageSize&page=@i&sort=@Model.Pager.Sort"
                                           class="paginate_button page-link">@i</a>
                                    </li>
                                }

                                <li class="paginate_item page-item">
                                    <a href="/?size=@Model.Pager.PageSize&page=@Model.Pager.EndPage&sort=@Model.Pager.Sort"
                                       class="paginate_button page-link">
                                        <span aria-hidden="true">End</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
        <!-- End Pagination -->
    </div>
    <!-- End Footer -->
</div>
<!-- End Card -->


<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form id="cui-form" class="js-validate" asp-controller="Home" asp-action="Index">
            <div class="modal-content">
                <!-- Header -->
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create a new intern</h5>
                    <button type="button" class="btn btn-icon btn-sm btn-ghost-secondary" data-dismiss="modal" aria-label="Close">
                        <i class="tio-clear tio-lg" aria-hidden="true"></i>
                    </button>
                </div>
                <!-- End Header -->
                <!-- Body -->
                <div class="card-body">
                    <!-- Form Group -->
                    <div class="row form-group">
                        <label class="col-sm-3 col-form-label input-label">Avatar</label>

                        <div class="col-sm-9">
                            <div class="d-flex align-items-center">
                                <!-- Avatar -->
                                <label class="avatar avatar-xl avatar-circle avatar-uploader mr-5" for="avatarUploader">
                                    <img id="avatarImg" class="avatar-img" src="/img/img1.jpg" alt="Image Description">

                                    <input asp-for="Avatar" type="file" class="js-file-attach avatar-uploader-input" id="avatarUploader" data-hs-file-attach-options='{
                                        "textTarget": "#avatarImg",
                                        "mode": "image",
                                        "targetAttr": "src",
                                        "resetTarget": ".js-file-attach-reset-img",
                                        "resetImg": "/img/img1.jpg",
                                        "allowTypes": [".png", ".jpeg", ".jpg"]
                                     }'>

                                    <span class="avatar-uploader-trigger">
                                        <i class="tio-edit avatar-uploader-icon shadow-soft"></i>
                                    </span>
                                </label>
                                <!-- End Avatar -->

                                <button type="button" class="js-file-attach-reset-img btn btn-white">Delete</button>
                            </div>
                        </div>
                    </div>
                    <!-- End Form Group -->
                    <!-- Form Group -->
                    <div class="row form-group">
                        <label for="firstNameLabel" class="col-sm-3 col-form-label input-label">Full name <i class="tio-help-outlined text-body ml-1" data-toggle="tooltip" data-placement="top" title="" data-original-title="Displayed on public forums, such as Front."></i></label>

                        <div class="col-sm-9">
                            <div class="input-group input-group-sm-down-break">
                                <input asp-for="FirstName" type="text" required class="form-control" name="firstName" id="firstNameLabel" placeholder="Clarice" aria-label="Clarice">
                                <input asp-for="LastName" type="text" required class="form-control" name="lastName" id="lastNameLabel" placeholder="Boone" aria-label="Boone">
                            </div>
                        </div>
                    </div>
                    <!-- End Form Group -->
                    <!-- Form Group -->
                    <div class="row form-group">
                        <label for="firstNameLabel" class="col-sm-3 col-form-label input-label">Birthday</label>

                        <div class="col-sm-9">
                            <div class="input-group input-group-sm-down-break">
                                <!-- Flatpickr -->
                                <input asp-for="DateOfBirth" type="text" id="birthLabel" class="js-flatpickr form-control" placeholder="Select dates"
                                       data-hs-flatpickr-options='{
                                           "dateFormat": "Y-m-d"
                                       }'>
                                <!-- End Flatpickr -->

                                <div class="input-group-append">
                                    <!-- Select2 -->
                                    <select asp-for=Gender id="genderLabel" class="js-select2-custom custom-select" size="1" style="opacity: 0;"
                                            data-hs-select2-options='{"minimumResultsForSearch": "Infinity",
                                                                  "placeholder": "Select gender"}'>
                                        <option label="empty"></option>
                                        <option value="male">Male</option>
                                        <option value="female">Female</option>
                                    </select>
                                    <!-- End Select2 -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Form Group --> <!-- Form Group -->
                    <div class="row form-group">
                        <label for="emailLabel" class="col-sm-3 col-form-label input-label">Email</label>

                        <div class="col-sm-9">
                            <input asp-for="Email" type="email" required class="form-control" name="email" id="emailLabel" placeholder="clarice@example.com" aria-label="clarice@example.com">
                        </div>
                    </div>
                    <!-- End Form Group -->
                    <!-- Form Group -->
                    <div class="row form-group">
                        <label for="emailLabel" class="col-sm-3 col-form-label input-label">Phone</label>
                        <div class="col-sm-9">
                            <input asp-for="Phone" type="text" id="phoneLabel" required class="js-masked-input form-control" placeholder="+84 000 000 000"
                                   data-hs-mask-options='{
                                   "template": "+00 000 000 000"
                                   }' maxlength="16" />
                        </div>
                    </div>
                    <!-- End Form Group -->
                    <!-- Form Group -->
                    <div class="row form-group">
                        <label for="emailLabel" class="col-sm-3 col-form-label input-label">Duration</label>
                        <div class="col-sm-9">
                            <input asp-for="Duration" type="text" id="durationLabel" required class="js-flatpickr form-control flatpickr-custom mb-2" placeholder="Select date range"
                                   data-hs-flatpickr-options='{
                         "dateFormat": "Y-m-d",
                         "mode": "range",
                         "minDate": "2020-12-20"
                       }'>
                        </div>
                    </div>
                    <!-- End Form Group -->
                    <!-- Form Group -->
                    <div class="row form-group">
                        <label class="col-sm-3 col-form-label input-label">Organization</label>
                        <div class="col-sm-9">
                            <div class="input-group input-group-sm-down-break">
                                <!-- Select2 -->
                                <select asp-for=OrganizationId id="organizationLabel" required class="js-select2-custom custom-select" size="1" style="opacity: 0;"
                                        data-hs-select2-options='{"minimumResultsForSearch": "Infinity",
                                                                  "placeholder": "Select one"}'>
                                    <option label="empty"></option>
                                    @foreach (var og in Model.Organizations)
                                    {
                                        <option value="@og.OrganizationId">@og.OrgName</option>
                                    }
                                </select>
                                <!-- End Select2 -->
                            </div>
                        </div>
                    </div>
                    <!-- End Form Group -->
                    <!-- Form Group -->
                    <div class="row form-group">
                        <label class="col-sm-3 col-form-label input-label">Training</label>
                        <div class="col-sm-9">
                            <div class="input-group input-group-sm-down-break">
                                <!-- Select2 -->
                                <select asp-for=TrainingId id="trainingLabel" required class="js-select2-custom custom-select" size="1" style="opacity: 0;"
                                        data-hs-select2-options='{"minimumResultsForSearch": "Infinity",
                                                                  "placeholder": "Select one"}'>
                                    <option label="empty"></option>
                                    @foreach (var e in Model.Trainings)
                                    {
                                        <option value="@e.TrainingId">@e.TraName</option>
                                    }
                                </select>
                                <!-- End Select2 -->
                            </div>
                        </div>
                    </div>
                    <!-- End Form Group -->
                    <!-- Form Group -->
                    <div class="row form-group">
                        <label class="col-sm-3 col-form-label input-label">Department</label>
                        <div class="col-sm-9">
                            <div class="input-group input-group-sm-down-break">
                                <div class="input-group input-group-sm-down-break">
                                    <!-- Select2 -->
                                    <select asp-for=DepartmentId id="departmentLabel" required class="js-select2-custom custom-select" size="1" style="opacity: 0;"
                                            data-hs-select2-options='{"minimumResultsForSearch": "Infinity",
                                                                  "placeholder": "Select one"}'>
                                        <option label="empty"></option>
                                        @foreach (var de in Model.Departments)
                                        {
                                            <option value="@de.DepartmentId">@de.DepName</option>
                                        }
                                    </select>
                                    <!-- End Select2 -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Form Group -->
                    <!-- Form Group -->
